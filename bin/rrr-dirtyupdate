for my $file (@files) {
    my @stat = stat $file or die "Couldn't stat '$file': $!";
    my $mtime = $stat[9];
    $rf->update($file,"new",$mtime);
}
warn "starting first aggregate at ".localtime;
$rf->aggregate(force => 1);
warn "starting second aggregate at ".localtime;
$rf->aggregate(force => 1);
